{
  "name": "noladiy",
  "version": "1.0.0",
  "description": "NOLADIY.ORG - New Orleans Events, Bands, Venues",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "sass-dev": "sass --watch --update --style=expanded assets/scss:web/css",
    "sass-prod": "sass --no-source-map --style=compressed assets/scss:web/css",
    "build": "esbuild assets/js/*.js --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outdir=web/js/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmaucoin/noladiy.git"
  },
  "keywords": [
    "yii",
    "php",
    "diy"
  ],
  "author": "Leigh Aucoin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lmaucoin/noladiy/issues"
  },
  "homepage": "https://github.com/lmaucoin/noladiy#readme",
  "dependencies": {
    "@yaireo/tagify": "^4.17.8",
    "esbuild": "^0.15.10",
    "js-datepicker": "^5.18.0",
    "sass": "^1.55.0"
  }
}
